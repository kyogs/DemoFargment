<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:digicorp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:minWidth="300dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <ms.cloudtea.viewpagermultiplefragmentdemo.app.view.TextView
            android:id="@+id/time_dialog_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            digicorp:asset_font_file_name="@string/roboto_regular" />

        <ms.cloudtea.viewpagermultiplefragmentdemo.app.view.TextView
            android:id="@+id/time_dialog_txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="time"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            digicorp:asset_font_file_name="@string/roboto_regular" />

        <ms.cloudtea.viewpagermultiplefragmentdemo.app.view.TextView
            android:id="@+id/time_dialog_txt_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="note"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            digicorp:asset_font_file_name="@string/roboto_regular" />

        <ms.cloudtea.viewpagermultiplefragmentdemo.app.view.Button
            android:id="@+id/time_dialog_txt_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:text="@string/accept"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            digicorp:asset_font_file_name="@string/roboto_regular" />

    </LinearLayout>

</android.support.v7.widget.CardView>